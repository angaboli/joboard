{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}


    <div class="container">

        <div class="row">
            <div class=" col pt-3 pb-5 pr-lg-4">
                <div class="card card-signin my-5 p-5 shadow-sm">
                    <div class="card-body">

                        {% for flashError in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}

                        <h3 class="card-title text-center mb-5">Inscription</h3>

                        {{ form_start(registrationForm) }}
                        <div class="row form-group my-3 ">


                            <div class="col">{{ form_row(registrationForm.prenom) }}</div>
                            <div class="col">{{ form_row(registrationForm.nom) }}</div>

                        </div>
                        <div class="row form-group my-3">
                            <div class="col">{{ form_row(registrationForm.plainPassword) }}</div>
                            <div class="col">{{ form_row(registrationForm.email) }}</div>
                            <div class="col">{{ form_row(registrationForm.telephone) }}</div>
                        </div>

                        <div class="row form-group my-3 ">


                        </div>

                        <div class="row form-group my-3">
                            <div class="col">

                                {{ form_row(registrationForm.agreeTerms) }}
                            </div>
                        </div>
                        <div class="form-group pt-3">
                            <button type="submit" class="btn btn-primary my-3">Enregister</button>
                        </div>

                        {{ form_end(registrationForm) }}



                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
